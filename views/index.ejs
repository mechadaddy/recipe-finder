<div class="container-fluid">
    <form action="/filter" method="POST">
        <div class="row">
                <div class="section" style="border-bottom: 1px solid black">
                    <p class="mt-2">Dish Base</p>
                    <label for="toggle1">Chicken</label>
                    <input type="radio" id="toggle1" name="dish_base" value="chicken">
        
                    <label for="toggle2">Beef</label>
                    <input type="radio" id="toggle2" name="dish_base" value="beef">
        
                    <label for="toggle3">Fish</label>
                    <input type="radio" id="toggle3" name="dish_base" value="fish">
        
                    <label for="toggle4">Vegetarian</label>
                    <input type="radio" id="toggle4" name="dish_base" value="vegetarian">
                </div>

                <div class="section" style = "border-bottom: 1px solid black">
                    <p class="mt-2">Dish Type</p>
                    <label for="toggle5">Main Dish</label>
                    <input type="radio" id="toggle5" name="dish_type" value="main_dish">
        
                    <label for="toggle6">Pasta</label>
                    <input type="radio" id="toggle6" name="dish_type" value="pasta">
        
                    <label for="toggle7">Appetizer</label>
                    <input type="radio" id="toggle7" name="dish_type" value="appetizer">
        
                    <label for="toggle8">Salad</label>
                    <input type="radio" id="toggle8" name="dish_type" value="salad">
                </div>
        
                <div class="section" style = "border-bottom: 1px solid black">
                    <p class="mt-2">Allergens</p>
                    <label for="toggle9">Nuts</label>
                    <input type="radio" id="toggle9" name="allergens" value="nuts">
        
                    <label for="toggle10">Gluten</label>
                    <input type="radio" id="toggle10" name="allergens" value="gluten">
        
                    <label for="toggle11">Vegan</label>
                    <input type="radio" id="toggle11" name="allergens" value="vegan">
        
                    <label for="toggle12">Dairy</label>
                    <input type="radio" id="toggle12" name="allergens" value="dairy">
                </div>
        
            </div>

        
        <button type="submit" style="width: 100%" class="mt-3">Submit</button>
    </div>
    </form>
</div>


<div class="container-fluid mt-3">
    <div class="recipe-card">
        <div class="recipe-words" style="margin: 10px">
            <% if (locals.recipe) { %>
                <%- include ("partials/recipe-card.ejs") %>
            <% } else { %>
                <p>No Recipe has been slected yet</p>
            <% } %>
        </div>

    </div>
</div>


