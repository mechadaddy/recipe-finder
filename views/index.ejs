<%- include("partials/header.ejs") %>

<!-- Button to toggle filters -->
<div class="container-fluid">
    <div class="row">

        <button class="filter-toggle-btn col" onclick="toggleFilters()">Show/Hide Filters</button>

            

    </div>
</div>

<!-- Filters Menu -->
<div class="filters">
