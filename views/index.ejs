    <form action="/filter" method="POST">
        <button type="submit" class="col mb-2">Submit</button>
      <div class="row">

        <!-- Dish Base Section -->
        <div class="section dish-base">
            <p class="mt-2">Dish Base</p>
        
            <div class="switch-container">
                <label for="toggle1">Chicken</label>
                <input type="checkbox" id="toggle1" name="dish_base" value="chicken">
            </div>
        
            <div class="switch-container">
                <label for="toggle2">Beef</label>
                <input type="checkbox" id="toggle2" name="dish_base" value="beef">
            </div>
        
            <div class="switch-container">
                <label for="toggle3">Fish</label>
                <input type="checkbox" id="toggle3" name="dish_base" value="fish">
            </div>
        
            <div class="switch-container">
                <label for="toggle4">Vegetarian</label>
                <input type="checkbox" id="toggle4" name="dish_base" value="vegetarian">
            </div>
        
            <div class="switch-container">
                <label for="toggle5">Pork</label>
                <input type="checkbox" id="toggle5" name="dish_base" value="pork">
            </div>
        
            <div class="switch-container">
                <label for="toggle6">Seafood</label>
                <input type="checkbox" id="toggle6" name="dish_base" value="seafood">
            </div>
        </div>

<!-- Dish Type Section -->
